.widget
  .widget__header Искать по названию
  .widget__body
    form.search
      input(type="search", value="", placeholder="Поиск", name="search").search__input
      button(type="submit").search__btn OK
.widget
  .widget__header.with--icon
    span Вы выбрали
    button(type="reset" form="checked").widget__action
      i.icon.icon--reset
  .widget__body
    form#checked.form.is--filtered
      .form__row
        .form__title Бренд
        - var boxes = ['Sennebogen'];
        each box,i in boxes
          .form__field.with-checkbox
            input.form__checkbox(id="b-"+(i+1), type="checkbox", name="b-"+(i+1) checked)
            label(for="b-"+(i+1))= box
.widget
  .widget__header Фильтры
  .widget__body
    form.form.is--filter
      .form__row
        .form__title Бренды
        - var boxes = ['Volvo ce','Terex trucks','Faresin','Goldhofer','SDLG'];
        each box,i in boxes
          .form__field.with-checkbox
            input.form__checkbox(id="brand-"+(i+1), type="checkbox", name="brand-"+(i+1))
            label(for="brand-"+(i+1))= box
