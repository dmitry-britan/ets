        .form__title Грузоподъемность
        - var boxes = ['до 10 т','до 50 т','до 100 т','до 150 т','до 200 т','до 250 т','до 300 т'];
        each box,i in boxes
          .form__field.with-checkbox
            input.form__checkbox(id="carrying-"+(i+1), type="checkbox", name="carrying-"+(i+1))
