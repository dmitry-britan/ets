        - var boxes = ['до 100 кВТ','100 – 150 кВТ','150 – 250 кВТ','250 – 350 кВТ','350 – 450 кВТ','450 – 550 кВТ','550 – 650 кВТ','650 – 750 кВТ','750 – 850 кВТ'];
